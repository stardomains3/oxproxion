<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_dialog_bg">

    <!-- Title -->
    <TextView
        android:id="@+id/dialog_title_timeout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Request Timeout"
        android:textColor="#C2C2C2"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginBottom="16dp" />

    <!-- Input field (numeric) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_text_layout_timeout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Minutes (1â€‘45)"
        app:boxStrokeColor="#C2C2C2"
        app:hintTextColor="#C2C2C2"
        app:boxBackgroundMode="outline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_timeout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="number"
            android:digits="0123456789"
            android:textColor="#FFFFFF"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Explanation -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The timeout defines how long the app will wait for the AI response before terminating the request. Longer values allow the model more time to generate answers. Default is 5 minutes."
        android:textColor="#C2C2C2"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel_timeout"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C2C2C2"
            android:text="Cancel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save_timeout"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#C2C2C2"
            android:text="Save" />
    </LinearLayout>
</LinearLayout>