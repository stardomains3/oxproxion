<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <!-- Inner group for icon + message, pinned to left with max 95% width -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aiGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHorizontal_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/messageContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ai_message"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0">

            <!-- NEW: ImageView for generated images -->
            <ImageView
                android:id="@+id/generatedImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:maxHeight="300dp"
                android:scaleType="centerInside"
                android:visibility="gone"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:fontFamily="@font/geologica_light"
                android:textColorHighlight="#756151"
                android:text="AI message here"
                android:textColor="#F8F8F8"
                android:linksClickable="true"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textIsSelectable="true"
                android:textSize="16sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/generatedImageView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Buttons moved below messageContainer, at bottom edge -->
        <ImageButton
            android:id="@+id/copyButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Copy text"
            android:padding="4dp"
            android:src="@drawable/ic_tune"
            app:tint="#454545"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/messageContainer" />

        <ImageButton
            android:id="@+id/aipdfButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Make PDF"
            android:padding="4dp"
            android:src="@drawable/ic_pdfnew"
            app:tint="#454545"
            app:layout_constraintStart_toEndOf="@id/copyButton"
            app:layout_constraintTop_toBottomOf="@id/messageContainer" />

        <!-- shareButton -->
        <ImageButton
            android:id="@+id/shareButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Share text"
            android:padding="4dp"
            android:src="@drawable/ic_share"
            app:tint="#454545"
            app:layout_constraintStart_toEndOf="@id/aipdfButton"
            app:layout_constraintTop_toBottomOf="@id/messageContainer" />

        <!-- ttsButton -->
        <ImageButton
            android:id="@+id/ttsButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Speak text"
            android:padding="4dp"
            android:src="@drawable/ic_volume_up"
            app:tint="#454545"
            app:layout_constraintStart_toEndOf="@id/shareButton"
            app:layout_constraintTop_toBottomOf="@id/messageContainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
