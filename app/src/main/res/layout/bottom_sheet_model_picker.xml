<!-- res/layout/bottom_sheet_model_picker.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#000000">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Select Model"
        app:titleTextColor="@android:color/white"
        android:background="#1C1C1E"
        app:menu="@menu/bottom_sheet_model_picker_menu"
        app:navigationIcon="@drawable/is_backarrow" />

    <!-- NEW: ConstraintLayout for filter bars -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Sort Bar -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/sortBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sortAlphabeticalButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Alphabetical"
                style="?attr/materialButtonOutlinedStyle"
                app:backgroundTint="@color/toggle_background_selector"
                app:strokeColor="@color/chestnut"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sortDateButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Newest"
                style="?attr/materialButtonOutlinedStyle"
                app:backgroundTint="@color/toggle_background_selector"
                app:strokeColor="@color/chestnut"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Type Filter Bar -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/filterBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sortBar"
            android:layout_marginTop="8dp"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterAllButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="All"
                style="?attr/materialButtonOutlinedStyle"
                app:backgroundTint="@color/toggle_background_selector"
                app:strokeColor="@color/chestnut"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterVisionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vision"
                style="?attr/materialButtonOutlinedStyle"
                app:backgroundTint="@color/toggle_background_selector"
                app:strokeColor="@color/chestnut"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterImageGenButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Image Gen"
                style="?attr/materialButtonOutlinedStyle"
                app:backgroundTint="@color/toggle_background_selector"
                app:strokeColor="@color/chestnut"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Cost Filter Bar -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/costFilterBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filterBar"
            android:layout_marginTop="8dp"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/costFilterAllButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="All"
                style="?attr/materialButtonOutlinedStyle"
                app:backgroundTint="@color/toggle_background_selector"
                app:strokeColor="@color/chestnut"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/costFilterFreeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Free"
                style="?attr/materialButtonOutlinedStyle"
                app:backgroundTint="@color/toggle_background_selector"
                app:strokeColor="@color/chestnut"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/costFilterPaidButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Paid"
                style="?attr/materialButtonOutlinedStyle"
                app:backgroundTint="@color/toggle_background_selector"
                app:strokeColor="@color/chestnut"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Changed from LinearLayout to CoordinatorLayout -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewModels"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:scrollbars="vertical"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:contentDescription="Add Model"
            android:src="@drawable/ic_addmod"
            android:backgroundTint="@color/chestnut"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>
